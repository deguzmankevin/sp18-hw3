<%= form_tag students_path do %>
  <%= label_tag(:full_name, "Full name") %>
  <%= text_field_tag(:full_name, nil, placeholder: @placeholder_full_name) %>

  <%= label_tag(:dog, "Dog") %>
  <%= text_field_tag(:dog, nil, placeholder: @placeholder_dog) %>

  <%= label_tag(:food, "Favorite food") %>
  <%= text_field_tag(:food, nil, placeholder: @placeholder_food) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create student") %>
<% end %>